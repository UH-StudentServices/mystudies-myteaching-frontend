{
  "extends": "airbnb-base/legacy",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "_": true,
    "$": false,
    "afterEach": false,
    "angular": false,
    "beforeEach": false,
    "browser": false,
    "by": false,
    "ClipboardJS": false,
    "describe": false,
    "element": false,
    "expect": false,
    "google": false,
    "Hammer": false,
    "inject": false,
    "it": false,
    "jasmine": false,
    "Modernizr": false,
    "moment": false,
    "RSSParser": true,
    "sprintf": false,
    "twttr": true
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "header/header": [2, "header.txt"],
    "func-names": 0,
    "no-param-reassign": ["error",
      { "props": false }
    ],
    "operator-linebreak": ["error", "before", { "overrides": { "=": "ignore" } }],
    "no-multiple-empty-lines": ["error", { "max": 1}],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "array-bracket-newline": ["error", { "multiline": true }],
    "object-curly-newline": ["error", { "multiline": true }],
    "strict": ["error", "global"],
    "no-caller": "error"
  },
  "plugins": [
    "header"
  ]
}
